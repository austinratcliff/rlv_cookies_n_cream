<div class='container'>
  <div class='row'>
    <div class='col-sm-6 mx-auto'>
      <%= form_with model: @order do |form| %>
        <div class='form-group'>
          <%= form.label :count, 'Count:' %><br>
          <%= form.select :count, options_from_collection_for_select(@counts, :first, :last), {}, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= form.label :description, 'Description:' %><br>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class='form-check'>
          <%= form.check_box :is_delivery, {class: 'form-check-input'}, true, false %>
          <%= form.label :is_delivery, 'Delivery?', class: 'form-check-label' %>
        </div><br>

        <%= form.submit 'Next', class: 'btn btn-light btn-block' %>
      <% end %>
    </div>
  </div>
</div>
