<div class='container'>
  <div class='row'>
    <div class='col-sm-6 mx-auto'>
      <%= form_with model: @order, method: :put do |form| %>
        <div class='form-group'>
          <%= form.label :count, 'Count:' %><br>
          <%= form.select :count, options_from_collection_for_select(@counts, :first, :last, @order.count), {}, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= form.label :description, 'Description/Theme:' %><br>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= form.label :colors, 'Colors:' %><br>
          <small><%= form.label :colors, '(Top three maximum)', class: 'form-check-label text-muted mb-1' %></small><br>
          <%= form.text_field :colors, multiple: true, value: @order.colors[0], class: 'form-control' %><br>
          <%= form.text_field :colors, multiple: true, value: @order.colors[1], class: 'form-control' %><br>
          <%= form.text_field :colors, multiple: true, value: @order.colors[2], class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= form.label :allergies, 'Allergies:' %><br>
          <small><%= form.label :allergies, '(May contain dairy, eggs, gluten/wheat, nuts, and/or soy)', class: 'form-check-label text-muted mb-1' %></small><br>
          <%= form.text_area :allergies, class: 'form-control' %>
        </div>

        <div class='form-check'>
          <%= form.hidden_field :is_delivery, {value: false} %>
          <%= form.check_box :is_delivery, {checked: @order.is_delivery, class: 'form-check-input'}, true, false %>
          <%= form.label :is_delivery, 'Delivery?', class: 'form-check-label' %>
          <small><%= form.label :is_delivery, '(Edmond, OK only â€¢ No shipping)', class: 'form-check-label text-muted' %></small>
        </div><br>

        <%= form.submit 'Next', class: 'btn btn-light btn-block' %>
      <% end %>
    </div>
  </div>
</div>
