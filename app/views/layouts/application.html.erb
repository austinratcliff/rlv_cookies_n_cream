<!DOCTYPE html>
<html>
  <head>
    <title>RLV Cookies 'n' Cream</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.4.1/css/all.css' integrity='sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz' crossorigin='anonymous'>
  </head>

  <body>
    <nav>
      <%= link_to image_tag('http://via.placeholder.com/175x75.png?text=+'), root_path, id: 'nav-logo' %>

      <div class='nav-div' id=nav-links>
        <% if logged_in? %>
          <%= link_to 'Profile', current_user, class: 'nav-link' %>
          <%= link_to 'Log out', session_path(current_user), method: :delete, class: 'nav-link' %>
        <% else %>
          <%= link_to 'Sign up', signup_path, class: 'nav-link' %>
          <%= link_to 'Log in', login_path, class: 'nav-link' %>
        <% end %>
      </div>
    </nav>

    <% flash.each do |message_type, message| %>
      <div class='flash flash-<%= message_type %>'>
        <%= message %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
