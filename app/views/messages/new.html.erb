<div class='container'>
  <div class='row'>
    <div class='col-lg-6 mx-auto'>
      <%= form_with model: @message do |form| %>
        <%= form.label :body, 'Message:' %><br>
        <%= form.text_area :body, class: 'form-control', cols: 50, rows: 10 %><br>
        <%= form.submit 'Send', class: 'btn btn-light btn-block' %>
      <% end %>
    </div>
  </div>
</div>
